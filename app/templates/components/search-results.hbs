<div class="panel panel-info">
  <div class="panel-heading">
    <h2 class="panel-title text-center">
      {{search.name}}
      <i class="panel-title fa fa-film fa-lg"></i>
    </h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="text-center">{{helpText}}</div>
      <br>
    </div>
    <div class="row">
      {{#each searchResults as |searchResult|}}
        {{yield searchResult searchType}}
      {{/each}}
    </div>
  </div>
</div>
