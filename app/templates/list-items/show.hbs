<section class="list-item col-md-offset-1 col-md-10">
  <div class="row">
    <div class="panel panel-info">
      <div class="list-item__heading panel-heading {{mediaType}}">
        <h2 class="panel-title text-center">
          {{model.name}}
          <i class="panel-title fa fa-lg {{typeIcon}}"></i>
        </h2>
      </div>
      <div class="panel-body">
        {{outlet 'show'}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="text-center">
      {{#link-to 'listItems'}}Back to List{{/link-to}}
    </div>
  </div>
</section>
