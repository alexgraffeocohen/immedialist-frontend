<form {{action "save" on="submit"}} class="create form-inline text-center">
  <div class="form-group">
    {{#x-select value=model.requestedType class="form-control"}}
      {{#each optionsForSelect as |option|}}
        {{#x-option value=option}}{{option}}{{/x-option}}
      {{/each}}
    {{/x-select}}
    {{input value=model.name class="form-control" placeholder="enter item" id="list-item-name"}}
  </div>
  <div class="form-group">
  </div>
  <input type="submit" class="btn btn-default" value="Add To List">
</form>
